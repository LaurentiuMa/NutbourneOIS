<Window x:Class="NutbourneOIS.ItemDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NutbourneOIS"
        mc:Ignorable="d"
        Title="ItemDetailsWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBox x:Name="ticketNumberTextBox"
                     Margin="0,0,0,5"/>
        <TextBox x:Name="itemTypeTextBox"
                     Margin="0,0,0,5"/>
        <TextBox x:Name="itemDescriptionTextBox"
                     Margin="0,0,0,5"/>
        <TextBox x:Name="engineerTextBox"
                     Margin="0,0,0,5"/>
        <Button Content="Update"
                Margin="0,0,0,5"
                    x:Name="updateButton"
                    Click="UpdateButton_Click"/>
    </StackPanel>
</Window>
